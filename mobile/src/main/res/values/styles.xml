<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorSecondaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Pb" parent="AppTheme.NoActionBar">
        <item name="colorAccent">#000</item>
    </style>

    <style name="PbBranco" parent="Pb">
        <item name="colorAccent">#fff</item>
    </style>

    <style name="MeuCollapseTolbar" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorPrimary">@color/colorSecondaryDark</item>
    </style>

    <style name="MeuTemaDark" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorPrimary">@color/colorSecondaryDark</item>
    </style>

    <style name="MeuEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="boxStrokeColor">@color/colorSecondaryLight</item>
        <item name="helperTextTextColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MeuEditTextBranco" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="helperTextTextColor">@color/colorSecondary</item>
    </style>

    <style name="AppCompatAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <item name="android:textColorPrimary">@color/colorSecondaryDark</item>
        <item name="android:background">#fff</item>
        <item name="android:textColor">@color/colorSecondaryDark</item>
    </style>

    <style name="MapaCar" parent="AppTheme">
        <item name="android:statusBarColor" tools:targetApi="lollipop">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
    </style>

    <style name="MeuCbBranco">
        <item name="android:checkBoxPreferenceStyle">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

