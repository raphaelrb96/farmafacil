<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:background="@drawable/ballon_left"
        android:paddingLeft="30dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="104dp"
        android:minHeight="50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/item_produto_mensagem_recebida"
                android:visibility="gone"
                android:layout_width="200dp"
                android:layout_height="270dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="2dp">

                <ImageView
                    android:id="@+id/capa_produto_mensagem_recebida"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:id="@+id/tv_item_prodt_mensagem_recebida"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="8dp"
                            android:maxLines="2" />

                        <TextView
                            android:gravity="start"
                            android:id="@id/tv_item_lab"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:textSize="18sp"
                            android:gravity="start|bottom|center"
                            android:id="@+id/tv_item_valor_mensagem_recebida"
                            android:layout_width="match_parent"
                            android:layout_height="38dp" />
                    </LinearLayout>
                </FrameLayout>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_item_add_remv_mensagem_recebida"
                    android:layout_gravity="end|bottom|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    app:backgroundTint="@color/colorPrimary"
                    app:fabSize="mini" />
            </androidx.cardview.widget.CardView>
            <ImageView
                android:maxHeight="250dp"
                android:id="@+id/img_mensagens_recebida"
                android:visibility="gone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />

            <TextView
                android:textSize="18sp"
                android:textColor="#ffffffff"
                android:layout_gravity="end"
                android:id="@+id/tv_menssagem_recebida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="EXEMPLO" />

            <TextView
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="#ffffffff"
                android:id="@+id/tv_hora_mensagem_recebida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXEMPLO" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>