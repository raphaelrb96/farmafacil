<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--Fundo-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".CarrinhoActivity" />
        <FrameLayout
            android:alpha="0.1"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.cardview.widget.CardView
            android:alpha="0.7"
            map:cardCornerRadius="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <fragment
                android:id="@+id/autocomplete_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                />
        </androidx.cardview.widget.CardView>

    </FrameLayout>
    <!--Frente-->
    <LinearLayout
        android:background="@drawable/ic_list_header_background"
        android:paddingTop="20dp"
        android:orientation="vertical"
        android:id="@+id/content_layout_cart"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:elevation="10dp"
        app:behavior_peekHeight="130dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <!--Conteudo-->
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="26dp">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:text="Entregar em:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold|italic"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="top|end"
                    android:textSize="14sp"
                    android:text="Mudar endereÃ§o"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <TextView
                android:maxLines="1"
                android:textStyle="bold"
                android:id="@+id/tv_nome_rua_cart"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/colorSecondaryLight"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="12dp"
            android:id="@+id/rv_cart"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

