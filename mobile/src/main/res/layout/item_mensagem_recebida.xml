<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:background="@drawable/ballon_left"
        android:paddingLeft="30.0dip"
        android:paddingTop="6.0dip"
        android:paddingRight="10.0dip"
        android:paddingBottom="6.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginBottom="4.0dip"
        android:minHeight="50.0dip">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/item_produto_mensagem_recebida"
                android:visibility="gone"
                android:layout_width="200.0dip"
                android:layout_height="270.0dip"
                android:layout_marginLeft="4.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginBottom="10.0dip"
                app:cardCornerRadius="2.0dip">

                <ImageView
                    android:id="@+id/capa_produto_mensagem_recebida"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true" />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="120.0dip"
                    android:layout_marginTop="150.0dip"
                    android:layout_marginBottom="8.0dip">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="6.0dip"
                        android:layout_marginTop="4.0dip"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginBottom="10.0dip">

                        <TextView
                            android:textSize="20.0sp"
                            android:textStyle="bold"
                            android:id="@+id/tv_item_prodt_mensagem_recebida"
                            android:layout_width="fill_parent"
                            android:layout_height="60.0dip"
                            android:layout_marginTop="8.0dip"
                            android:maxLines="2" />

                        <TextView
                            android:gravity="start"
                            android:id="@id/tv_item_lab"
                            android:visibility="gone"
                            android:layout_width="fill_parent"
                            android:layout_height="0.0dip"
                            android:layout_weight="1.0" />

                        <TextView
                            android:textSize="18.0sp"
                            android:gravity="start|bottom|center"
                            android:id="@+id/tv_item_valor_mensagem_recebida"
                            android:layout_width="fill_parent"
                            android:layout_height="38.0dip" />
                    </LinearLayout>
                </FrameLayout>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_item_add_remv_mensagem_recebida"
                    android:layout_gravity="end|bottom|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6.0dip"
                    app:backgroundTint="@color/colorPrimary"
                    app:fabSize="mini" />
            </androidx.cardview.widget.CardView>
            <ImageView
                android:id="@+id/img_mensagens_recebida"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="4.0dip"
                android:layout_marginBottom="10.0dip"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:maxWidth="170.0dip"
                android:maxHeight="200.0dip" />

            <TextView
                android:textSize="18.0sp"
                android:textColor="#ffffffff"
                android:layout_gravity="end"
                android:id="@+id/tv_menssagem_recebida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8.0dip"
                android:text="EXEMPLO" />

            <TextView
                android:textSize="14.0sp"
                android:textStyle="italic"
                android:textColor="#ffffffff"
                android:id="@+id/tv_hora_mensagem_recebida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXEMPLO" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>